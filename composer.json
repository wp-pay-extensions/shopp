{
	"name": "wp-pay-extensions/shopp",
	"description": "Shopp driver for the WordPress payment processing library.",
	"keywords": ["wordpress", "wp", "pay", "shopp", "extension", "pronamic"],
	"homepage": "http://www.wp-pay.org/extensions/shopp/",
	"license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "Pronamic",
			"email": "info@pronamic.eu",
			"homepage": "http://www.pronamic.eu/",
			"role": "Company"
		},
		{
			"name": "Remco Tolsma",
			"email": "info@remcotolsma.nl",
			"homepage": "http://www.remcotolsma.nl/",
			"role": "Developer"
		}
	],
	"support": {
		"email": "support@wp-pay.org",
		"issues": "https://github.com/wp-pay-extensions/shopp/issues",
		"source": "https://github.com/wp-pay-extensions/shopp"
	},
	"autoload": {
		"psr-4": {
			"Pronamic\\WordPress\\Pay\\Extensions\\Shopp\\": "src/"
		}
	},
	"config": {
		"sort-packages": true
	},
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "ingenesis/shopp",
				"version": "1.4",
				"dist": {
					"url": "https://github.com/ingenesis/shopp/archive/1.4.zip",
					"type": "zip"
				},
				"source": {
					"url": "https://github.com/ingenesis/shopp",
					"type": "github",
					"reference": "tags/1.4"
				},
				"autoload": {
					"classmap": [
						"."
					]
				}
			}
		}
	],
	"require": {
		"php": ">=5.6.20",
		"wp-pay/core": "^2.2"
	},
	"require-dev": {
		"ingenesis/shopp": "1.4",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.5",
		"php-coveralls/php-coveralls": "^2.1",
		"phpcompatibility/php-compatibility": "^9.2",
		"phpcompatibility/phpcompatibility-wp": "^2.0",
		"phpmd/phpmd": "^2.7",
		"phpunit/phpunit": "^5.7 || ^6.0",
		"roots/wordpress": "^5.2",
		"squizlabs/php_codesniffer": "^3.4",
		"wp-coding-standards/wpcs": "^2.1",
		"wp-phpunit/wp-phpunit": "^5.2"
	},
	"scripts": {
		"coveralls": "vendor/bin/coveralls -v",
		"phpcbf": "vendor/bin/phpcbf",
		"phpcs": "vendor/bin/phpcs -s -v",
		"phplint": "find src tests -name '*.php' | xargs -n 1 -P 4 php -l",
		"phpmd": "vendor/bin/phpmd src,tests text phpmd.ruleset.xml --suffixes php",
		"phpunit": "vendor/bin/phpunit"
	}
}
